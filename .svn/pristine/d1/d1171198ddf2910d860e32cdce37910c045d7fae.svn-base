@import '@/assets/style/mixin.scss';
.signin-wrapper {
  .el-form-item__error {
    width: 70%;
    margin-left: 15%;
  }
}

  .el-popover{
    width: 300px !important;
  }


@include b(page-pay) {
  @include b(input-number) {
    .el-input__inner {
      text-align: center;
    }
    .el-input-group__prepend {
      &:hover {
        cursor: pointer;
      }
    }
    .el-input-group__append {
      &:hover {
        cursor: pointer;
      }
    }
  }
  .my-cm-card {
    .el-icon-minus {
      &::before {
        padding: 20px 15px;
      }
    }
    .el-icon-plus {
      &:before {
        padding: 20px 15px;
      }
    }
    .el-input-group__append {
      padding: 0 !important;
    }
    .el-input-group__prepend {
      padding: 0 !important;
    }
  }
}

.my-pay-index {
  .my-card-container {
    min-height: 240px !important;
  }
}

.my-callback-page {
    .my-card-container {
      min-height: 240px !important;
    }
}

.my-pay-index {
  .el-dialog {
    width:330px;
    height: 420px;
    box-sizing: border-box;

    .el-dialog__body {
      padding-top: 0;
    }
  }
}

.my-about-page {
  .my-about-list {
    .el-table__header-wrapper {
      .el-table__header {
        & > thead {
          font-size: 15px;
          background-color: #EEE;
        }
      }
    }
    .el-table__body-wrapper {
      table {
        font-size: 14px;
      }
    }
  }
}